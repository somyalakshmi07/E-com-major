<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Products</title>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/admin-nav') %>
    
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Manage Products</h2>
            <a href="/admin/products/add" class="btn btn-primary">Add Product</a>
        </div>
        
        <% if (success_msg) { %>
            <div class="alert alert-success"><%= success_msg %></div>
        <% } %>
        
        <% if (error_msg) { %>
            <div class="alert alert-danger"><%= error_msg %></div>
        <% } %>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                    <tr>
                        <td>
                            <% if (product.image) { %>
                                <img src="<%= product.image %>" alt="<%= product.name %>" style="width: 50px; height: 50px; object-fit: cover;">
                            <% } else { %>
                                <div style="width: 50px; height: 50px; background: #eee;"></div>
                            <% } %>
                        </td>
                        <td><%= product.name %></td>
                        <td>$<%= product.price.toFixed(2) %></td>
                        <td><%= product.category %></td>
                        <td><%= product.stock %></td>
                        <td>
                            <a href="/admin/products/edit/<%= product._id %>" class="btn btn-sm btn-info">Edit</a>
                            <form action="/admin/products/delete/<%= product._id %>" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>
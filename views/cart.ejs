<%- include('partials/header', {title: title}) %>
        <section class="cart-page">
            <h1>Your Shopping Cart</h1>
            
            <% if (cartItems && cartItems.length > 0) { %>
                <div class="cart-items">
                    <% cartItems.forEach(item => { %>
                        <div class="cart-item">
                            <img src="<%= item.image_url %>" alt="<%= item.name %>">
                            <div class="cart-item-info">
                                <h3><%= item.name %></h3>
                                <p class="cart-item-price">$<%= item.price %> each</p>
                                <p>Quantity: <%= item.quantity %></p>
                                <p class="subtotal">Subtotal: $<%= item.subtotal.toFixed(2) %></p>
                            </div>
                            <form action="/cart/remove/<%= item.id %>" method="POST">
                                <button type="submit" class="btn remove-btn">Remove</button>
                            </form>
                        </div>
                    <% }); %>
                </div>
                
                <div class="cart-total">
                    <h2>Total: $<%= total %></h2>
                    <a href="/cart/checkout" class="btn checkout-btn">Proceed to Checkout</a>
                </div>
            <% } else { %>
                <p>Your cart is empty. <a href="/products">Browse our products</a> to find something fun!</p>
            <% } %>
        </section>
<%- include('partials/footer') %>
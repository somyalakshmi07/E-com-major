<%- include('partials/header', {title: title}) %>
        <section class="product-detail">
            <div class="product-image">
                <img src="<%= product.image_url %>" alt="<%= product.name %>">
            </div>
            
            <div class="product-info">
                <h1><%= product.name %></h1>
                <p class="price">$<%= product.price %></p>
                <p class="category">Category: <%= product.category %></p>
                <p class="age-range">Ages: <%= product.age_range %></p>
                <p class="stock"><%= product.stock > 0 ? 'In Stock' : 'Out of Stock' %></p>
                
                <div class="description">
                    <h3>Description</h3>
                    <p><%= product.description %></p>
                </div>
                
                <% if (product.stock > 0) { %>
                    <% if (session.userId) { %>
                        <form action="/cart/add" method="POST">
                            <input type="hidden" name="productId" value="<%= product.id %>">
                            <div class="form-group">
                                <label for="quantity">Quantity:</label>
                                <input type="number" id="quantity" name="quantity" value="1" min="1" max="<%= product.stock %>">
                            </div>
                            <button type="submit" class="btn">Add to Cart</button>
                        </form>
                    <% } else { %>
                        <p><a href="/auth/login">Login</a> to add this item to your cart.</p>
                    <% } %>
                <% } else { %>
                    <p class="out-of-stock">This product is currently out of stock.</p>
                <% } %>
            </div>
        </section>
<%- include('partials/footer') %>